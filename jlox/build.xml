<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="com/craftinginterpreters/lox" destdir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/Lox.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="com.craftinginterpreters.lox.Lox"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/Lox.jar" fork="true"/>
    </target>

</project>
